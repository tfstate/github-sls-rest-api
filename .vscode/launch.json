  "version": "0.2.0",
  "configurations": [
    {
      "preLaunchTask": "prepare",
      "type": "node",
      "request": "launch",
      "name": "Local Debug",
      "program": "${workspaceRoot}/node_modules/serverless/bin/serverless",
      "args": ["offline", "start", "--noTimeout"],
      "outFiles": ["${workspaceFolder}/.webpack/**/*.js"],
      "sourceMaps": true,
      "internalConsoleOptions": "openOnSessionStart",
      "presentation": {
        "hidden": false,
        "group": "api",
        "order": 1
      }
    }
  ]
}
